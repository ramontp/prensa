<?xml version="1.0" encoding="UTF-8"?>
<Context path="/prensa">
  <!-- Specify a JDBC datasource -->
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" maxActive="10" maxIdle="4" name="jdbc/prensaDatasource" password="${bd.password}" type="javax.sql.DataSource" url="${bd.url}" username="${bd.usuario}" validationQuery="select 1"/>
  <!-- Specify the security realm and location of the users file
    <Realm className="org.apache.catalina.realm.MemoryRealm" 
           pathname="/tomcat/webapps/ROOT/WEB-INF/users.xml" />
    -->
</Context>
